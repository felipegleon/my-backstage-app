{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend-a\" \"yarn start-backend-b\"",
    "start": "yarn workspace app start --config=./app-config-app.yaml",
    "start-backend-a": "yarn workspace backend-a start --config=./app-config-backend-a.yaml",
    "start-backend-b": "yarn workspace backend-b start --config=./app-config-backend-b.yaml",
    "build:app": "yarn workspace app build --config=./app-config-app.production.yaml",
    "build:backend-a": "yarn workspace backend-a build --config=./app-config-backend-a.production.yaml",
    "build:backend-b": "yarn workspace backend-b build --config=./app-config-backend-b.production.yaml",
    "build-image": "yarn workspace repo build-image -all",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/master",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.25.1",
    "@backstage/e2e-test-utils": "^0.1.0",
    "@playwright/test": "^1.32.3",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "~5.2.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
